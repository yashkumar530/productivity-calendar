<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<Scene xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <root>
      <AnchorPane prefHeight="300.0" prefWidth="500.0">
         <children>
            <VBox prefHeight="300.0" prefWidth="500.0">
               <children>
                  <HBox prefHeight="25.0" prefWidth="500.0">
                     <children>
                        <Label prefHeight="25.0" prefWidth="116.0" text="Name:" />
                        <Label fx:id="miniTaskName" prefHeight="25.0" prefWidth="460.0" style="-fx-border-color: #000000;" />
                     </children>
                  </HBox>
                  <HBox prefHeight="22.0" prefWidth="500.0">
                     <children>
                        <Label prefHeight="22.0" prefWidth="78.0" text="Day of Week:" />
                        <Label fx:id="miniTaskDay" prefHeight="22.0" prefWidth="422.0" style="-fx-border-color: #000000;" />
                     </children>
                  </HBox>
                  <HBox prefHeight="252.0" prefWidth="498.0">
                     <children>
                        <Label prefHeight="222.0" prefWidth="78.0" text="Description:" />
                        <Label fx:id="miniTaskDescription" prefHeight="223.0" prefWidth="423.0" style="-fx-border-color: #000000;" />
                     </children>
                  </HBox>
                  <HBox prefHeight="68.0" prefWidth="500.0">
                     <children>
                        <Label prefHeight="39.0" prefWidth="78.0" text="Completed?" />
                        <Label fx:id="miniTaskComplete" prefHeight="39.0" prefWidth="350.0" style="-fx-border-color: #000000;" />
                        <Button fx:id="miniTaskClose" mnemonicParsing="false" prefHeight="39.0" prefWidth="72.0" text="Close" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </root>
</Scene>
